                <Image url="@../../imgs/logo.png" />
            </ImageView>
            <TextField fx:id="firstNameTextField" layoutX="105.0" layoutY="160.0" prefHeight="27.0" prefWidth="130.0" promptText="First name" style="-fx-background-color: transparent; -fx-border-color: #DDDDDD; -fx-border-width: 0px 0px 2px 0px;" />
